<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/yellow" /> <!-- Adjust background color if needed -->
            <size android:width="100dp" android:height="100dp" /> <!-- Adjust size for desired padding -->
        </shape>
    </item>

    <!-- Icon with Padding -->
    <item
        android:top="50dp"
        android:bottom="50dp"
        android:left="50dp"
        android:right="50dp">
        <bitmap
            android:src="@drawable/todolistapp"
            android:gravity="center" />
    </item>
</layer-list>
